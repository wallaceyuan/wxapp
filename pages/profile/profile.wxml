<!--index.wxml-->
<import src="../common/movie-list.wxml"/>
<view class="timeline">
  <view class="section button">
    <button bindtap="tapclick" id="timeline">时间线</button>
    <button bindtap="tapclick" id="mark">编写心情</button>
  </view>
  <block>
    <view wx:if="{{!mark}}" style="height:500px;background:red;">1</view>
    <scroll-view  class="dailWrapper">
      <template is="dailymake" data="{{dailymakes}}"/>
    </scroll-view>
    <view wx:if="{{mark}}" class="fucButton">
        <button class="addTxt"  bindtap="operate">操作</button>
    </view>
  </block>
</view>
