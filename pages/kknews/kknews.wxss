.page-body {
    background: #efefef;
}
.bigPic{
    width: 750rpx;
    height: 420rpx;
    margin-bottom: 20rpx;
    display: flex;
    position:relative;
}
.bigPic image{
    display: block;
    width: 100%;
    height: 100%;
}
.bigPic text{
    width: 100%;
    display: block;
    padding: 20rpx 5%;
    background: rgba(0,0,0,0.7);
    position: absolute;
    bottom: 0px;
    left: 0px;
    color: #fff;
    font-size: 32rpx; 
}
.kitem{
    font-size: 28rpx;
    display: flex;
    height: 210rpx;
    margin-bottom: 20rpx;
    background: #fff;
}
.kitem .meta{
    flex :1;
}
.kitem .meta .title{
    margin: 8px 10%;
    height: 120rpx;
    overflow: hidden;
    display: block;
}
.kitem .meta .key{
    margin: 10px 10%;
    font-size: 20rpx;
    color: #999;
}
.kitem image {
    display: block;
    width: 100%;
    height: 100%;
    background: #f0f0f0 url(http://skin.kankanews.com/logo/waiting150x150.png) no-repeat center center;
    flex: 1;
}
